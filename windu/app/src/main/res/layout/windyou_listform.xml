<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp" android:background="#ffffff"
    android:weightSum="100"
    android:id="@+id/Layout_grouplistview">



    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="4">
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="20"
        android:gravity="center"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ImageView_windyou_list_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/tempimage" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="60"
        >
        <TextView
            android:id="@+id/TextView_windyou_list_nikname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="22dp"
            android:text="NICK NAME"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="#67bec6"/>


        <TextView
            android:id="@+id/TextView_windyou_list_helpwrite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="도와주세요."
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/TextView_windyou_list_nikname"
            android:textColor="#000000"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="16"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/TextView_windyou_list_date"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="100"
            android:text="2015-08-25"
            android:textSize="10dp"
            android:paddingTop="5dp"
            android:textColor="#000000"/>

    </LinearLayout>


</LinearLayout>

    <ImageView
        android:id="@+id/ImageView_windyou_blindviewer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

</RelativeLayout>