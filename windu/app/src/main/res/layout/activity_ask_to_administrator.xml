<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:background="#4fc1cb"
        >
        <TextView
            android:id="@+id/cancel_help_me"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:text="취소"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="25dp"
            android:layout_weight="58"
            android:layout_gravity="center"
            android:text="의견 보내기"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="19"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="45"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/content_help_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_weight="100"
            android:lines="15"
            android:maxLength="120"
            android:gravity="top"
            android:background="@drawable/image_messagebox"
            android:padding="8dp"
            android:hint="최대 글자 수 140자 내외 (띄어쓰기, 특수기호 포함)"
            android:textSize="13dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/trans_help_me"
            android:background="#4fc1cb"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="70dp">
            <TextView
                android:textSize="25dp"
                android:text="의견 보내기"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="+25 EXP"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="30"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="안내"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/question"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="○ 의견 보내기는 경험치 25를 획득할 수 있으며, 획득한"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/changetemp_exclamation"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="  경험치가 누적되면 회원 레벨이 상승합니다."
                android:textSize="15dp"
                android:layout_toRightOf="@+id/changetemp_exclamation"
                android:paddingLeft="5dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="○ 어플리케이션을 이용하시면서 발생하는 오류나, 불편한"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/changetemp_exclamation"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="  사항을 적어주시면 빠른 시간내에 개선하도록 하겠습니다."
                android:textSize="15dp"
                android:layout_toRightOf="@+id/changetemp_exclamation"
                android:paddingLeft="5dp"
                />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>