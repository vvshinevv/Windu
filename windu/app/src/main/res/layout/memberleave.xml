<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:background="#4fc1cb"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/TextView_MemberLeave_backButton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:text="취소"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="25dp"
            android:layout_weight="58"
            android:layout_gravity="center"
            android:text="계정탈퇴"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_weight="74"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:paddingTop="15dp"
                android:id="@+id/changetemp_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src = "@drawable/memberleavemsg"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="16"
        android:gravity="center"
        >

        <RelativeLayout
            android:id="@+id/Layout_MemberLeave_memberleavebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4fc1cb"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/memberleavetemp_textbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위 안내사항을 다 확인하였으며,\n계정을 삭제하겠습니다."
                android:paddingLeft="15dp"
                android:layout_marginRight="80dp"
                android:textColor="#ffffff"
                />
            <CheckBox
                android:id="@+id/Checkbox_MemberLeave_memberleave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/memberleavetemp_textbox"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView_MemberLeave_memberleavebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정탈퇴"
                android:paddingLeft="130dp"
                android:paddingRight="130dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#ffffff"
                android:background="#50365d62"
                />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
