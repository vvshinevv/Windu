<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ebebeb"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:background="#4fc1cb"
        android:weightSum="100">
        <TextView
            android:id="@+id/Button_selectrius_backbutton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:text="취소"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:src="@drawable/wind_me_logo"
            android:layout_gravity="center"
            android:padding="15dp"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/helpmebutton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textSize="15dp"
            android:text="도움요청"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:background="#ffffff"
        android:weightSum="100">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#ffffff"
            android:weightSum="100"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="45"
            android:background="#ffffff"
            android:weightSum="100">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="50"
                android:text="검색 반경을 설정해 주세요."
                android:textColor="#269ea8"
                android:gravity="center_vertical"
                android:textSize="10dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="50"
                android:background="#ffffff"
                android:weightSum="100">
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="45"
                    android:text="나의 최대 반경은"
                    android:textColor="#269ea8"
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/TextView_selectradiuswindme_radius"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="20"
                    android:text="15"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="35"
                    android:text="km 입니다."
                    android:textColor="#269ea8"
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:background="#ffffff"
            android:weightSum="100"/>
        <!--<ImageView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:padding="10dp"
            android:src="@drawable/icon_maker_small"/>
        <NumberPicker
            android:id="@+id/NumberPicker_seletradiuswindme_radius"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:text="km"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"
            /> -->
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="82"
        android:background="#ffffff"
        android:weightSum="100">
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment"
            />

    </LinearLayout>


</LinearLayout>
