<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ebebeb"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="25"
        android:weightSum="100">
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="20"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="40"/>
        <ImageButton
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:padding="8dp"
            android:background="@drawable/icon_wind_me_plus"
            android:onClick="plusButtonClicked"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="40"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="현재 존재하는 도움요청이 없습니다."
            android:gravity="center"
            android:textColor="#000000"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'도움요청'"
            android:textColor="#8dd5f0"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="버튼을 터치하여"
                android:textColor="#000000"/>
         </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="도움을 요청할 수 있습니다."
            android:gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>
