<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/login_bg"
    android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="54"
        android:weightSum="100"
    >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="35"
            />
        <TextView
            android:id="@+id/TextView_MainActivity_Usercnt"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="15"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
        <EditText
            android:id="@+id/ID_edittext"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:maxLength="20"
            android:ems="10"
            android:hint="ID"
            android:text=""
            android:singleLine="true"
            android:background="@drawable/sqbox"
            android:textColor="#4fc1cb"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>

        <EditText
            android:id="@+id/PW_edittext"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:maxLength="20"
            android:ems="10"
            android:hint="Password"
            android:text=""
            android:singleLine="true"
            android:password="true"
            android:background="@drawable/sqbox"
            android:textColor="#4fc1cb"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:weightSum="100"></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="21"/>
        <TextView
            android:id="@+id/emailtb"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="12"
            android:text="이메일"
            android:textColor="#848484"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:text="혹은"
            android:textColor="#4fc1cb"
            />
        <TextView
            android:id="@+id/passwordtb"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="16"
            android:text="비밀번호"
            android:textColor="#848484"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:text="를 잊으셨나요?"
            android:textColor="#4fc1cb"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:onClick="LoginButtonClicked"
            android:layout_below="@+id/PW_edittext"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="로그인"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/login_login_button"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
        <Button
            android:id="@+id/base4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:onClick="facebookButtonClicked"
            android:layout_below="@+id/loginbutton"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_facebook_login_button"
            android:paddingLeft="25dp"
            android:text="페이스북으로 로그인"
            android:textSize="15dp"
            android:textColor="#369fe8"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weightSum="100">
        <TextView
            android:id="@+id/regID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weightSum="100">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="30"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:text="처음 오셨나요?"
            android:textColor="#4fc1cb"
            />
        <TextView
            android:id="@+id/signuptb"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="16"
            android:text="회원가입"
            android:textColor="#848484"
            android:onClick="signupTVclicked"
            />

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
    </LinearLayout>





</LinearLayout>
