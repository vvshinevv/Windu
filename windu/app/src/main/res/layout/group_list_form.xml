<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#ffffff"
    android:weightSum="100"
    android:id="@+id/Layout_grouplistview">



    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="4">
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="20">
        <TextView
            android:id="@+id/alignTV"
            android:layout_width="120dp"
            android:layout_height="110dp" />
        <ImageView
            android:id="@+id/ImageView_grouplist_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/alignTV"
            android:padding="3dp"
            android:src="@drawable/icon_group"
            />
        <TextView
            android:id="@+id/alignTV2"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/alignTV2"
            android:layout_alignBottom="@+id/alignTV2"
            android:src="@drawable/icon_review_count"
            />
        <TextView
            android:id="@+id/TextView_member_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignRight="@+id/alignTV2"
            android:layout_alignBottom="@+id/alignTV2"
            android:textColor="#ffffff"
            android:text="99+"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="60"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/TextView_helpwrite"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="100"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="16"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/TextView_date"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="100"
            android:text="2015-08-25"
            android:textSize="10dp"
            android:paddingTop="5dp"
            android:textColor="#000000"/>

    </LinearLayout>


</LinearLayout>

    <ImageView
        android:id="@+id/ImageView_windme_blindviewer"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        />

</RelativeLayout>