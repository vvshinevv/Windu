<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ebebeb"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:background="#4fc1cb"
        android:weightSum="100">
        <TextView
            android:id="@+id/Button_settinglocation_backbutton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:text="취소"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="25dp"
            android:layout_weight="40"
            android:layout_gravity="center"
            android:text="알림위치설정"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/Button_settinglocation_button"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:textSize="15dp"
            android:text="확인"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:background="#ffffff"
        android:weightSum="100">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#ffffff"
            android:weightSum="100"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="95"
            android:background="#ffffff"
            android:weightSum="100">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="50"
                android:text="현재 선택한 위치"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:textSize="10dp"
                />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="50"
                android:background="#ffffff"
                >
                <ImageView
                    android:id="@+id/locationsettingtemp"
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:padding="2dp"
                    android:src="@drawable/icon_locationsetting_gps_mark"
                    />
                <TextView
                    android:id="@+id/TextView_settinglocation_locationtext"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/locationsettingtemp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="82"
        android:background="#ffffff"
        android:weightSum="100">
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment"
            />

    </LinearLayout>


</LinearLayout>
